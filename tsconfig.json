{
  "compilerOptions": {
    "target": "ES2020",                           // Use ES2016 as the ECMAScript target
    "module": "commonjs",                         // CommonJS modules for Node.js
    "strict": true,                               // Enable all strict type-checking options
    "esModuleInterop": true,                      // Emit __importStar and __importDefault helpers for runtime babel ecosystem compatibility
    "resolveJsonModule": true,                    // Include modules imported with .json extension
    "outDir": "./dist",                           // Redirect output structure to the 'dist' directory
    "rootDir": "./",                           // Specify the root directory of input files
    "forceConsistentCasingInFileNames": true,     // Disallow inconsistently-cased references to the same file
    "skipLibCheck": true,                         // Skip type checking of declaration files for better performance
    "moduleResolution": "node",                   // Use Node.js module resolution strategy
    "allowSyntheticDefaultImports": true,         // Allow default imports from modules with no default export
    "declaration": true,                          // Generate corresponding '.d.ts' file
    "sourceMap": true                             // Generate source maps for debugging
  },
  "include": ["src/*"],                        // Include all files in the 'src' folder
  "exclude": ["node_modules", "dist"]             // Exclude 'node_modules' and 'dist' directories
}




